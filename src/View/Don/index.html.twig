{% extends "layout.html.twig" %}
{% block content %}
	<div class="container mt-4">

		<h1 class="text-center mb-4">
			Explore
		</h1>
		{% if user %}
			<a href="/telephone/add" class="btn btn-success mb-2">
				<i class="bi bi-plus-lg"></i>
				ajoute un telephone
			</a>
		{% endif %}
		<section>
			<h2 class="mb-4 p-3 bg-green">
				Les telephones
			</h2>
			<div
				class="row g-5 mb-4">
				{# {% for phone in phones %} #}
				<div class="col-sm-6 col-md-4 col-lg-3 mb-4">
					<div class="card border-0 shadow h-100">
						<div class="card-header bg-white">
							<img class="card-logo-company" src="/uploads/phone/{{phone.logo}}" alt="">
						</div>
						<h1 class="card-title text-center text-primary h5 p-2 w-100">
							{{ phone.model }}
						</h1>
						<div class="row g-0 h-100">
							<div class="col-md-5 p-2">
								<img src="/uploads/{{ phone.picture }}" class="img-fluid h-100 mx-auto d-block" alt="{{ phone.model }}"/>
							</div>
							<div class="col">
								<div class="card-body h-100">

									<div class="card-text mb-2">
										{{phone.summary|raw}}
									</div>
									<a class="btn btn-primary" href="/phone/show?id={{phone.id}}">show</a>
								</div>
							</div>
						</div>
					</div>
				</div>
				{# {% endfor %} #}
			</div>
		</section>


	</div>
{% endblock %}
