{% extends "layout.html.twig" %}

{% block content %}
	<h1 class="text-center">
		Toutes les annonces
	</h1>
	<section>
		<h2>
			Téléphones
		</h2>

		<div class="row">
			{% for phone in phones %}
				<div class="col-lg-6">
					<div class="card mb-3" style="max-width: 540px;">
						<div class="row g-3">
							<div class="col-md-4">
								<img src="https://fakeimg.pl/250x300/" class="img-fluid rounded-start" alt="..."></div>
							<div class="col-md-8">
								<div class="card-body">
									<h5 class="card-title">
										{{phone.brand}}
										{{phone.model}}
									</h5>
									<p class="card-text">
										{{phone.description}}
									</p>
									<p class="card-text">
										<small class="text-muted">
											Publié le
											{{phone.created_at}}
										</small>
									</p>
									<p class="card-text">
										<small class="text-muted">
											Lieu :
											{{phone.place}}
										</small>
									</p>
								</div>
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>

	</section>

{% endblock %}
